<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="registry_app_website_client" name="Clients">
        <t t-call="registry_app.registry_app_website_reg_app_header_template"/>
            <div class="container">
                <h1 class="text-center p-2">Clients</h1>
                <div class="mb-3">
                    <a href="/clients/form"
                       class="btn btn-primary">Create</a>
                </div>
                <div class="row">
                    <t t-foreach="clients" t-as="cl">
                        <div class="col-sm-4 mb-3">
                            <div class="card h-100 bg-secondary border"
                                 t-att-data-coop-id="cl.id">
                                <div class="card-body">
                                    <h5 class="card-title"
                                        t-esc="cl.partner_id.name"></h5>
<!--                                    <div>-->
<!--                                        <a class="btn btn-primary"-->
<!--                                           t-attf-href="/cooperative/{{ prod.id }}/shops">-->
<!--                                            Go to Shop</a>-->
<!--                                    </div>-->
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        <t t-call="registry_app.registry_app_website_reg_app_footer_template"/>
        <!--         <style>-->
        <!--        -->
        <!--    </style>-->
    </template>

    <template id="website_reg_client_form_template" name="Products Form">
        <t t-call="registry_app.registry_app_website_reg_app_header_template"/>
            <div class="container">
                <div>
                    <h1 class="text-center p-2">Create Products</h1>
                    <form action="/submit_clients" method="POST">
                        <input type="hidden" name="csrf_token"
                               t-att-value="request.csrf_token()"/>

                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name"
                                   name="name" required="True"/>
                            <br/>
                        </div>

                         <div class="form-group">
                            <label for="client_number">Client Number:</label>
                            <input type="text" class="form-control" id="client_number"
                                   name="client_number"/>
                            <br/>
                        </div>

                         <div class="form-group">
                            <label for="phone">Phone:</label>
                            <input type="tel" class="form-control" id="phone"
                                   name="phone"/>
                            <br/>
                        </div>

                        <div class="form-group">
                            <label for="email">E-mail:</label>
                            <input type="email" class="form-control" id="email"
                                   name="email" />
                            <br/>
                        </div>

                        <div class="form-group">
                            <label for="street">Street:</label>
                            <input type="test" class="form-control" id="street"
                                   name="street" />
                            <br/>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Submit</button>
                    </form>
                </div>
            </div>
        <t t-call="registry_app.registry_app_website_reg_app_footer_template"/>
    </template>
</odoo>