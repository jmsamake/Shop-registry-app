                            <div class="form-outline mb-3">
                                <label class="form-label"
                                       for="reg_password">
                                    Password</label>
                                <input type="password"
                                       id="reg_password"
                                       name="reg_password"
                                       class="form-control form-control-lg"
                                       placeholder="Enter password"/>

                            </div>

                            <div class="text-center text-lg-start mt-4 pt-2">

