<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_message" inherit_id="website.layout"
              name="Custom Header and Footer">
        <xpath expr="//div[@id='wrapwrap']/main" position="before">
            <t t-if="request.env.user.is_from_registry_app">
                <html lang="en">
                    <head>
                        <meta charset="UTF-8"/>
                        <meta name="viewport"
                              content="width=device-width, initial-scale=1.0"/>
                        <title>Sanitize</title>
                        <link rel="stylesheet"
                              href="/registry_app/static/src/css/style.css"/>
                        <link rel="stylesheet"
                              href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
                              integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
                              crossorigin="anonymous"/>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
                                integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
                                crossorigin="anonymous"
                                referrerpolicy="no-referrer"></script>
                        <!--                        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"-->
                        <!--                              rel="stylesheet"></link>-->
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
                        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
                        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"
                              rel="stylesheet"/>
                        <style>
                            #wrapwrap main {
                                overflow-x: hidden;
                                overflow-y: auto;
                                max-height: 80vh;
                                padding-bottom: 20px;
                            }

                            body.o_connected_user {
                                padding-top: 0px !important;
                            }

                            /*#oe_main_menu_navbar, .o_main_navbar {*/
                            /*    !*background:#685563 !important;*!*/
                            /*    opacity: 0;*/
                            /*    display: none;*/
                            /*}*/

                            /*.js_language_selector button {*/
                            /*    border: 1px solid white !important;*/
                            /*    color: #fff !important;*/
                            /*}*/
                            #loading-overlay {
                                position: fixed;
                                top: 0;
                                left: 0;
                                width: 100%;
                                height: 100%;
                                background-color: rgba(0, 0, 0, 0.8); /* Use a dark color for the overlay */
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                z-index: 9999;
                            }

                            .nav-link {
                                color: #fff !important;
                            }

                            .select2 {
                                max-width: 100%;
                            }

                            .spinner {
                                width: 40px;
                                height: 40px;
                                border: 4px solid #ccc;
                                border-top-color: #333;
                                border-radius: 50%;
                                animation: spin 1s infinite linear;
                            }

                            @keyframes spin {
                                0% {
                                    transform: rotate(0deg);
                                }
                                100% {
                                    transform: rotate(360deg);
                                }
                            }

                            /*header{*/
                            /*    position: fixed;*/
                            /*    top: 0;*/
                            /*    min-width: 100vw;*/
                            /*    z-index:100000*/
                            /*}*/
                        </style>
                    </head>
                </html>
            </t>
            <t t-else="">
                <html lang="en">
                    <head>
                        <meta charset="UTF-8"/>
                        <meta name="viewport"
                              content="width=device-width, initial-scale=1.0"/>
                        <title>Sanitize</title>
                        <link rel="stylesheet"
                              href="/registry_app/static/src/css/style.css"/>
                        <link rel="stylesheet"
                              href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
                              integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
                              crossorigin="anonymous"
                              referrerpolicy="no-referrer"/>
                        <!--                        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"-->
                        <!--                              rel="stylesheet"></link>-->
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
                                integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
                                crossorigin="anonymous"
                                referrerpolicy="no-referrer"></script>
                        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
                        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"
                              rel="stylesheet"/>
                    </head>
                </html>
            </t>
        </xpath>
<!--        <xpath expr="//main" position="after">-->
<!--            <div id="loading-overlay">-->
<!--                <div class="spinner"></div>-->
<!--            </div>-->
<!--        </xpath>-->

        <!--         Header  -->
        <xpath expr="//header" position="replace">
            <t t-if="request.env.user.is_from_registry_app">
                <header style="z-index: 9999">
                    <nav class="navbar navbar-expand-lg navbar-secondary bg-secondary py-3">
                        <div class="container ps-2 pe-2">
                            <a class="navbar-brand" href="#">
                                <t t-if="request.env.user.shop_id.shop_logo">
                                    <img t-att-src="'/web/image/registry_app.shop/' + str(request.env.user.shop_id.id) + '/shop_logo'"
                                         style="max-height: 40px; max-width: 40px; margin-right: 5px;"
                                         alt="Shop Logo"/>
                                </t>
                                <t t-else="">
                                    <img src="/registry_app/static/src/img/website_logo.svg"
                                         alt="logo"
                                         style="height: 35px; max-height: 35px;"/>
                                </t>
                                <!-- Add your website name here if necessary -->
                            </a>
                            <button class="navbar-toggler" type="button"
                                    data-toggle="collapse"
                                    data-target="#navbarSupportedContent"
                                    aria-controls="navbarSupportedContent"
                                    aria-expanded="false"
                                    aria-label="Toggle navigation">
<!--                                <span class="navbar-toggler-icon"></span>-->
                                <span class="fa fa-bars"/>
                                    <span/>
                            </button>

                            <div class="collapse navbar-collapse"
                                 id="navbarSupportedContent">
                                <ul class="navbar-nav mx-auto">
                                    <li class="nav-item"
                                        t-if="request.env.user.has_group('registry_app.registry_app_super_admin') or request.env.user.has_group('registry_app.registry_app_cooperative_owner')">
                                        <a class="nav-link text-white"
                                           href="/cooperatives">Cooperatives</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white"
                                           t-attf-href="/cooperative/{{ request.env.user.cooperative_id.id }}/shops">
                                            Shops</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white"
                                           href="/reg_products">Products</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white"
                                           href="/reg_clients">Clients</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white"
                                           href="/reg_sms">SMS</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white"
                                           href="/reg_app/reporting">Reports</a>
                                    </li>
                                    <li class="nav-item">
<!--                                        <a class="nav-link text-white"-->
<!--                                           href="/reg_app/user">Users</a>-->
                                        <a class="nav-link text-white"
                                           href="/reg_app/users">Users</a>
                                    </li>
                                </ul>
                                <div class="nav navbar-nav ml-auto">
                                    <!-- Sign In -->
                                    <t t-call="portal.placeholder_user_sign_in">
                                        <t t-set="_item_class"
                                           t-value="'nav-item ml-lg-3'"/>
                                        <t t-set="_link_class"
                                           t-value="'nav-link'"/>
                                    </t>
                                    <!-- User Dropdown -->
                                    <t t-call="portal.user_dropdown">
                                        <t t-set="_user_name" t-value="True"/>
                                        <t t-set="_item_class"
                                           t-value="'nav-item dropdown ml-lg-3'"/>
                                        <t t-set="_link_class"
                                           t-value="'nav-link font-weight-bold'"/>
                                    </t>
                                </div>

                            </div>
                        </div>
                    </nav>
                </header>
            </t>
            <t t-else="">
                <header>
                    <section class="navigation">
                        <!-- Navbar -->
                        <div class="nav-wrapper">
                            <nav class="navbar navbar-expand-lg navbar-dark scrolling-navbar"
                                 id="new">
                                <!--  Navbar brand  -->
                                <a class="navbar-brand">
                                    <t t-call="website.placeholder_header_brand">
                                        <t t-set="_link_class"
                                           t-value="'mr-auto'"/>
                                    </t>
                                </a>
                                <!--  Collapse button  -->
                                <button class="navbar-toggler" type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#basicExampleNav"
                                        aria-controls="basicExampleNav"
                                        aria-expanded="false"
                                        aria-label="Toggle navigation">
                                    <span class="fa fa-bars"/>
                                    <span/>
                                </button>
                                <!--  Collapsible content  -->
                                <div class="collapse navbar-collapse"
                                     id="basicExampleNav">
                                    <!--  Links  -->
                                    <ul class="navbar-nav mr-auto">
                                        <t t-foreach="website.menu_id.child_id"
                                           t-as="submenu">
                                            <li class="nav-item active"
                                                t-call="website.submenu">
                                                <a class="nav-link"
                                                   t-set="item_class"
                                                   t-value="'nav-item'"/>
                                                <span class="sr-only">
                                                    (current) </span>
                                                <a t-set="link_class"
                                                   t-value="'nav-link'"/>
                                            </li>
                                        </t>
                                    </ul>
                                    <!--  Links  -->
                                    <div class="nav navbar-nav navbar-expand">
                                        <!--  Sign In  -->
                                        <t t-call="portal.placeholder_user_sign_in">
                                            <t t-set="_item_class"
                                               t-value="'nav-item ml-lg-3'"/>
                                            <t t-set="_link_class"
                                               t-value="'nav-link'"/>
                                        </t>
                                        <!--  User Dropdown  -->
                                        <t t-call="portal.user_dropdown">
                                            <t t-set="_user_name"
                                               t-value="True"/>
                                            <t t-set="_item_class"
                                               t-value="'nav-item dropdown ml-lg-3'"/>
                                            <t t-set="_link_class"
                                               t-value="'nav-link font-weight-bold'"/>
                                        </t>
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </section>
                </header>
            </t>
        </xpath>
        <!--         Footer -->
        <xpath expr="//footer" position="replace">
            <t t-if="request.env.user.is_from_registry_app">
                <footer class="py-3 text-light fixed-bottom"
                        style="background: #222325">
                    <div class="text-white p-1 w-100">
                        <div class="d-flex justify-content-around align-center text-white">
                            <div>
<!--                                <t t-if="user and user.shop_id">-->
<!--                                    <p>-->
<!--                                        © 2023-->
<!--                                        <span t-esc="user.shop_id.name"/> | All-->
<!--                                        rights reserved-->
<!--                                    </p>-->
<!--                                </t>-->
<!--                                <t t-else="">-->
                                    <p>© 2023 | My Shop | All rights
                                        reserved</p>
<!--                                </t>-->
                            </div>
                            <span>
                                <t t-call="website.language_selector"/>
                            </span>
                        </div>
                    </div>
                </footer>
            </t>
            <t t-else="">
                <footer class="footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-lg-4 col-md-12 col-sm-12">
                                <div class="footer_part">
                                    <h4>About Us</h4>
                                    <p class="fp"> We are dedicated to the
                                        safety of our guests and employees and
                                        have updated our safety measures. We
                                        believe in Simple, Creative, Modern and
                                        Flexible Design Standards with a Retina
                                        and Responsive Approach. </p>
                                    <!--                                    <a href="#" class="btn btn-quoteF">Get a-->
                                    <!--                                        Quote > </a>-->
                                </div>
                            </div>
                            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                                <h4>Contact Us</h4>
                                <address class="fp">
                                    <div t-field="res_company.partner_id"
                                         t-options="{ 'widget': 'contact', '
                                    fields': ['name', 'address', 'phone', '
                                    mobile', 'email']}"/>
                                </address>
                                <div class="footer_icons">
                                    <ul>
                                        <a href="#">
                                            <li class="fab fa-facebook-f fb"
                                                aria-hidden="true"/>
                                        </a>
                                        <a href="#">
                                            <li class="fab fa-twitter tw"
                                                aria-hidden="true"/>
                                        </a>
                                        <a href="#">
                                            <li class="fab fa-google-plus-g gg"
                                                aria-hidden="true"/>
                                        </a>
                                        <a href="#">
                                            <li class="fab fa-dribbble dr"
                                                aria-hidden="true"/>
                                        </a>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                                <h4>Subscribe Newslettres</h4>
                                <p class="fp"> Enter your email and receive the
                                    latest news, updates and special offers from
                                    us. </p>
                                <div class="ping">
                                    <form class="form-inline">
                                        <div class="md-form my-0">
                                            <input class="form-control mr-sm-2"
                                                   type="text"
                                                   placeholder="Email"
                                                   aria-label="Email"/>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="footer_bottom text-center">
                        <div>
                            © 2023 Splash. All rights reserved | Design by
                            <a href="#">Cybrosys.</a>
                            <span>
                                <t t-call="portal.language_selector"/>
                            </span>
                        </div>
                    </div>
                </footer>
            </t>
        </xpath>
    </template>
</odoo>
