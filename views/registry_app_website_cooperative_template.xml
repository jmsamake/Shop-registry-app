<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="registry_app_website_cooperatives" name="Cooperatives">
        <t t-call="registry_app.custom_header"/>
        <div class="container">
            <h1 class="text-center p-2">Coopératives</h1>
            <div class="mb-3">
                <a href="/cooperatives/form"
                   class="btn btn-secondary"
                   t-if="user.has_group('registry_app.registry_app_super_admin')">
                    Create</a>
            </div>
            <div class="row">
                <t t-foreach="cooperatives" t-as="coop">
                    <div class="col-sm-4 mb-3">
                        <div class="card h-100 bg-light border"
                             t-att-data-coop-id="coop.id">
                            <div class="card-body">
                                <h5 class="card-title"
                                    t-esc="coop.name"></h5>
                                <div>
                                    <a class="btn btn-secondary"
                                       t-attf-href="/cooperative/{{ coop.id }}/shops">
                                        Aller à la boutique</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
        <t t-call="registry_app.registry_app_website_reg_app_footer_template"/>        <!--         <style>-->
        <!--        -->
        <!--    </style>-->
    </template>

    <template id="cooperative_form_template" name="Cooperative Form">
        <t t-call="registry_app.custom_header"/>
        <div class="container">
            <div>
                <h1 class="text-center p-2">Créer des coopératives</h1>
                <form action="/submit_cooperative" method="POST">
                    <input type="hidden" name="csrf_token"
                           t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label for="name">Nom:</label>
                        <input type="text" class="form-control" id="name"
                               name="name" required="True"/>
                        <br/>
                    </div>
                    <br/>
                    <!--                    <div class="form-group">-->
                    <!--                        <label for="shop_ids">Shops:</label>-->
                    <!--                        <input type="text" class="form-control" id="shop_ids"-->
                    <!--                               name="shop_ids"/>-->
                    <!--                        <br/>-->
                    <!--                    </div>-->
                    <div class="form-group">
                        <label for="user_id">Utilisateur:</label>
                        <select class="form-control" id="user_id"
                                name="user_id">
                            <option value="">Select a user...</option>
                            <t t-foreach="users" t-as="user">
                                <option t-att-value="user.id"><t
                                        t-esc="user.name"/></option>
                            </t>
                        </select>
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-success">
                        Soumettre</button>
                    <a class="btn btn-danger"
                       t-attf-href="/cooperatives">
                        Jeter</a>
                </form>
            </div>
        </div>
        <t t-call="registry_app.registry_app_website_reg_app_footer_template"/>
    </template>
</odoo>