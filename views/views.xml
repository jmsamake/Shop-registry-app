<odoo>
    <data>

        <record id="view_registry_shop_search" model="ir.ui.view">
            <field name="name">registry_app.registry_app.search.view</field>
            <field name="model">registry_app.registry_app</field>
            <field name="arch" type="xml">
                <search string="Registry App Shop">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="shop_id"/>
                    <!--                <field name="user_id" />-->
                    <!--                <filter name="my_sessions" string="My Sessions" domain="[('user_id', '=', uid)]"/>-->
                    <separator/>
                    <!--                <filter name="open_sessions" string="In Progress" domain="[('state', '=', 'opened')]"/>-->
                    <!--                <separator/>-->
                    <group expand="0" string="Group By">
                        <filter string="Point of Sale" name="point_of_sale"
                                domain="[]" context="{'group_by': 'shop_id'}"/>
                        <filter string="Status" name="status" domain="[]"
                                context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="registry_app_list">
            <field name="name">Registries list</field>
            <field name="model">registry_app.registry_app</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'validated'"
                      decoration-info="state == 'opened'"
                      decoration-danger="state == 'cancelled'"
                      decoration-warning="state == 'closed'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="create_uid" widget="many2one_avatar"/>
                    <field name="active" invisible="True"/>
                    <field name="total_sales"/>
                    <field name="total_purchase"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!--        Registry App form view-->
        <record model="ir.ui.view" id="registry_app.form">
            <field name="name">Registries Form</field>
            <field name="model">registry_app.registry_app</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Close Input" type="object"
                                name="close_input" data-hotkey="z"
                                class="oe_highlight"
                                groups="registry_app.registry_app_shop_owner"
                        />
                        <button string="Validate" type="object"
                                name="validate" class="oe_highlight"
                                groups="registry_app.registry_app_shop_owner"
                        />
<!--                        <button string="Send SMS" type="object"-->
<!--                                name="send_sms" class="oe_highlight"-->
<!--                                attrs="{'invisible': [('state', '=', 'opened')]}"-->
<!--                                groups="registry_app.registry_app_shop_owner"-->
<!--                        />-->
                        <button string="Cancel" type="object" name="cancel"
                                groups="registry_app.registry_app_shop_owner"
                        />
                        <button string="Reset" type="object" name="reset"
                                groups="registry_app.registry_app_shop_owner"
                        />
                        <field name="state" widget="statusbar" nolabel="1"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived"
                                bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <!--                        <group>-->
                        <!--                        <group>-->
                        <div class="oe_title">
                            <h1>
                                <separator style="font-size: 1.25rem"
                                           string="Name"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <field name="active" invisible="True"/>
                        <!--                            <field name="registry_user_id"-->
                        <!--                                   widget="many2one_avatar_user"></field>-->
                        <!--                        </group>-->
                        <group>
                            <field name="date"/>
                        </group>
                        <!--                        </group>-->

                        <notebook>
                            <page string="Sale">
                                <field name="sale_app_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                        <field name="price"/>
                                        <field name="quantity"/>
                                        <field name="client_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Expense">
                                <field name="purchase_app_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                        <field name="cost"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!--            registry app server action menu sms -->
         <record model="ir.actions.server" id="action_reg_send_sms">
       <field name="name">Send SMS</field>
       <field name="model_id" ref="registry_app.model_registry_app_client"/>
       <field name="binding_model_id" ref="registry_app.model_registry_app_client"/>
       <field name="state">code</field>
       <field name="code">
           if records:
                action = records.open_broadcastsms()
       </field>
   </record>

        <!--        registry_app.client tree view-->
        <record model="ir.ui.view" id="registry_app.client_tree_view">
            <field name="name">client.tree</field>
            <field name="model">registry_app.client</field>
            <field name="arch" type="xml">
                <tree>
                    <header><button name="open_broadcastsms" string="Send SMS" type="object" class="btn-primary"/></header>
                    <field name="client_number"/>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="street"/>
                </tree>
            </field>
        </record>

        <!--        registry_app.client form view-->
        <record model="ir.ui.view" id="client_form_view">
            <field name="name">client.form</field>
            <field name="model">registry_app.client</field>
            <field name="arch" type="xml">
                <form string="Client">
                    <header>
                        <button string="Send sms" type="object"
                                name="send_sms" class="oe_highlight"
                        />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <!--<field name="name" class="o_bold"/>-->
                                <field name="name" class="o_bold"/>
                                <field name="client_number"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="street"/>
                            </group>
                            <group>
                                <!--add new field if needed-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        registry_app.users form view-->
        <record model="ir.ui.view" id="registry_app_users_form_view">
            <field name="name">Registry App Users Form View</field>
            <field name="model">registry_app.users</field>
            <field name="arch" type="xml">
                <form string="Client">
                    <sheet>
                        <group>
                            <group>
                                <!--<field name="name" class="o_bold"/>-->
                                <field name="name" class="o_bold"/>
                                <field name="login"/>
                                <field name="password"/>
                                <field name="registry_user_group"
                                       widget="radio"/>
                                <!--<field name="phone"/>-->
                            </group>
                            <group>
                                <field name="password_lock" widget="radio"/>
                                <field name="login_pswd"
                                       attrs="{'invisible': [('password_lock', '!=', 'single_password')]}"/>
                                <field name="menus_to_lock"
                                       widget="many2many_tags"
                                       attrs="{'invisible': [('password_lock', '!=', 'single_password')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        registry_app.cooperative form view-->
        <record model="ir.ui.view"
                id="registry_app.registry_app_cooperative_view_from">
            <field name="name">registry_app.cooperative_form</field>
            <field name="model">registry_app.cooperatives</field>
            <field name="arch" type="xml">
                <form string="Cooperatives">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <separator style="font-size: 1.3rem"
                                           string="Name"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <br/>
                        <group>
                            <group>
                                <field name="shop_ids"
                                       widget="many2many_tags" readonly="True"/>
                                <field name="user_id"
                                       widget="many2one_avatar_user"
                                       domain="[('is_from_registry_app', '=', True)]"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                                />
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        registry_app.shop form view-->
        <record model="ir.ui.view" id="registry_app_shop_form_view">
            <field name="name">registry.app.shop</field>
            <field name="model">registry_app.shop</field>
            <field name="arch" type="xml">
                <form string="Client">
                    <sheet>
                        <field name="shop_logo" widget="image"
                               class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <separator style="font-size: 1.3rem"
                                           string="Name"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <br/>
                        <group>
                            <!--                                <field name="name" class="o_bold"/>-->
                            <group>
                                <field name="user_id" widget="many2one_avatar"
                                       domain="[('is_from_registry_app', '=', True)]"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                                />
                                <field name="shop_users_ids"
                                       widget="many2many_tags_avatar"
                                       domain="[('is_from_registry_app', '=', True)]"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                                />
                                <field name="company_id"
                                       options="{'no_create': True}"
                                       groups="base.group_multi_company"
                                       widget="many2one_avatar" readonly="1"/>
                                <!--                                <field name="user_name"/>-->
                                <!--                                <field name="password" password="True"/>-->
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!--        sms broadcast tree-->
        <record model="ir.ui.view" id="view_regsmsbroadcast_tree">
            <field name="name">regsmsbroadcast.tree</field>
            <field name="model">regsmsbroadcast</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="clients_ids" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                    <field name="message"/>
                    <field name="broadcast_date"/>
                    <field name="msg_sent" widget="boolean_toggle"/>
                    <field name="state" widget="badge"
                           decoration-info="state == 'draft'"
                           decoration-success="state == 'send'"
                           decoration-danger="state == 'failed'"/>
                </tree>
            </field>
        </record>

        <!--        sms broadcast form-->
        <record model="ir.ui.view" id="view_sms_broadcast_form">
            <field name="name">SMS Broadcast Form</field>
            <field name="model">regsmsbroadcast</field>
            <field name="arch" type="xml">
                <form string="SMS Broadcast Form" create="true" edit="true">
                    <header>
                        <field name="state" widget="statusbar" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="broadcast_date"/>
                        </group>
                        <group>
                            <field name="clients_ids" widget="many2many_tags"
                                   domain="['|', ('shop_id.user_id', '=', uid),
                                   ('shop_id.shop_users_ids', 'in', [uid])]"
                                   options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                            />
                            <field name="message"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="msg_sent" invisible="1"/>
                        </group>
                        <button string="Send SMS Now" name="action_sms_send"
                                type="object" class="btn-primary"/>
                    </sheet>
                </form>
            </field>
        </record>

